{
  "name": "reep.io",
  "version": "1.2.1",
  "description": "The official reep.io source code",
  "dependencies": {
    "peer": "^0.2.0"
  },
  "scripts": {
    "build-html": "cp -Rf src/html/* public/html && cp src/html/*.html public/",
    "build-js": "cp -Rf src/js/ public/js",
    "build-media": "cp -Rf src/media/ public/media",
    "build": "npm run build-html && npm run build-media && npm run build-js",
    "watch": "watch 'npm run build' 'src'",
    "start": "parallelshell 'http-server public -a 0.0.0.0 -p 8080 -c-1' 'npm run watch'",
    "test": "karma start",
    "postinstall": "bower install && cp -n ./public/config.dist.js ./public/config.js"
  },
  "author": "https://github.com/kodekraftwerk",
  "license": "GPL-2.0",
  "devDependencies": {
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.12",
    "karma-chrome-launcher": "^0.2.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-ie-launcher": "^0.2.0",
    "karma-jasmine": "^0.3.6",
    "parallelshell": "^2.0.0",
    "watch": "^0.16.0"
  },
  "subdomain": "kodekraftwerk-reepio",
  "engines": {
    "node": "0.12.x"
  }
}
